---
import './TitleBlockServices.less';

  const { data } = Astro.props;
  
---

<div class="title-block">
  <div class="flex flex-col md:flex-row flex-wrap gap-6">
  <div class="grow shrink basis-0 mb-6">
    <h1>{data.pageTitle}</h1>
    <a class="" href="/services">← Все услуги</a>
  </div>
    <p class="grow shrink basis-0 mt-4 subtitle">{data.subtitle}</p>
  </div> 
  <img src="/images/services/clients.png">
</div>
